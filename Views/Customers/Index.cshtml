@model IEnumerable<AutoWorkshop.Models.Customer>

@{
	ViewData["Title"] = "Index";
}

<h1>Customers List</h1>

<p>
	<a asp-action="Create">Create New</a>
</p>
<form asp-action="Search" id="searchForm">
	<input type="text" id="lastName" name="lastName" placeholder="Search Customer By Last Name" style="width:250px;" maxlength="20" />
	<input type="submit" value="Search" class="btn btn-primary" />
</form>

<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.FirstName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.LastName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.CustomerAddress)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.FirstName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.LastName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.CustomerAddress)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.CustomerId">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.CustomerId">Details</a> |
					<a asp-action="Vehicles" asp-route-id="@item.CustomerId">Vehicle List</a> |
					<a asp-action="Delete" asp-route-id="@item.CustomerId">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>

<script>
	// Only Search when value is entered
	document.getElementById("searchForm").addEventListener("submit", function (event) {
	    var name = document.getElementById("lastName").value;
	    if (name.trim() === "") {
	        event.preventDefault();
	    }
	});
</script>
