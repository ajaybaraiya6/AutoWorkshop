@model IEnumerable<AutoWorkshop.Models.Vehicle>

@{
    ViewData["Title"] = "Vehicles";
}

<h1>Vehicles For Customer: @ViewBag.CustomerName</h1>

<p>
    <a asp-action="Create" asp-route-id="@ViewBag.CustomerId">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VehicleMake)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleModel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleYear)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleMake)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleModel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleYear)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.VehicleNumber">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.VehicleNumber">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.VehicleNumber">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index" asp-controller="Customers">Back to List</a>
</div>
